<Window
    x:Class="LiveMarkdown.Avalonia.Demo.MainWindow" xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:demo="clr-namespace:LiveMarkdown.Avalonia.Demo" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:LiveMarkdown.Avalonia;assembly=LiveMarkdown.Avalonia" d:DesignHeight="450"
    d:DesignWidth="800" Title="LiveMarkdown.Avalonia.Demo"
    x:DataType="demo:MainWindow" mc:Ignorable="d">
    <Grid
        Margin="4" ColumnDefinitions="*,4,*"
        RowDefinitions="*,Auto">
        <ScrollViewer
            x:Name="RawMarkdownTextBlockScrollViewer" Grid.Row="0"
            Grid.Column="0" Background="#11FFFFFF"
            CornerRadius="4">
            <TextBlock
                x:Name="RawMarkdownTextBlock" Margin="8,4"
                FontFamily="Consolas, 'Courier New', monospace" TextWrapping="Wrap"/>
        </ScrollViewer>

        <ScrollViewer
            x:Name="MarkdownRendererScrollViewer" Grid.Row="0"
            Grid.Column="2" Background="#11FFFFFF"
            CornerRadius="4">
            <md:MarkdownRenderer
                x:Name="MarkdownRenderer" Margin="8,4"
                InlineHyperlinkCommand="{Binding HyperlinkCommand}"
                MarkdownBuilder="{Binding $parent[demo:MainWindow].MarkdownBuilder}"/>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1" Grid.Column="0"
            Grid.ColumnSpan="3" Margin="0,8,0,0"
            Orientation="Horizontal" Spacing="16">
            <TextBlock
                Margin="0,0,-4,0" VerticalAlignment="Center"
                Text="Select sample: "/>
            <ComboBox
                VerticalAlignment="Center"
                ItemsSource="{Binding $parent[demo:MainWindow].MarkdownList}"
                SelectedItem="{Binding $parent[demo:MainWindow].SelectedMarkdown, Mode=OneWayToSource}"/>

            <TextBlock
                Margin="0,0,-4,0" VerticalAlignment="Center"
                Text="Render speed: "/>
            <Slider
                x:Name="RenderSpeedSlider" Width="160"
                VerticalAlignment="Center" Maximum="100"
                Minimum="1" Value="30"/>

            <Button
                VerticalAlignment="Center" Click="HandleClearButtonClick"
                Content="Clear"/>
        </StackPanel>
    </Grid>
</Window>
